#!/bin/bash

rm -rf ./_install
./binutils_make distclean
./sdcc_make distclean

./binutils_configure
./sdcc_configure
sync

./binutils_make
if [ ! $? -eq 0 ]; then
	echo "Failed on ./binutils_make"
	exit 1
fi

sync
./binutils_make install
if [ ! $? -eq 0 ]; then
	echo "Failed on ./binutils_make install"
	exit 1
fi

sync
./sdcc_make install
if [ ! $? -eq 0 ]; then
	echo "Failed on ./sdcc_make install"
	exit 1
fi
